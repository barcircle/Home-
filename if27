#include <iostream>

/*Для данного вещественного x найти значение следующей функции f,
принимающей значения целого типа:
0, если x < 0,
f (x) = 1, если x принадлежит [0, 1), [2, 3), . . . ,
−1, если x принадлежит [1, 2), [3, 4), . . . .
*/

using namespace std;

int main(){
    double val;
    cout<<"Введите x :";
    cin>>val;

    if (val < 0){
        cout<<0;
        return 0;
    }

    /*
    можно убрать комментарии и будет работать только с целыми числами
    
    if (val != ((double)((int)val))){
        cout<<"Введите целое число!!!";
        return 0;
    }*/

    int n =((int)val);
    if(n%2 == 0){
        cout<<1;
    }
    else{
        cout<<-1;
    }

    

    return 0;
}
